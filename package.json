{
  "title": "Repeatening",
  "name": "Repeatening",
  "version": "0.0.1",
  "description": "Transform YouTube URLs into websites that repeat YouTube videos",
  "main": "index.js",
  "author": "ProfOak",
  "engines": {
    "firefox": ">=38.0a1",
    "fennec": ">=38.0a1"
  },
  "license": "GPL V3",

  "preferences": [{
    "name": "autopin",
    "title": "Auto-Pin",
    "description": "Turn the repeating video into a pinned tab",
    "type": "bool",
    "value":"false"
  },
  {
    "name": "website",
    "title": "Repeating website",
    "description": "Choose your repeating website",
    "type": "radio",
    "value": "listenonrepeat.com",
    "options": [
      {
        "value": "listenonrepeat.com",
        "label": "Listen on Repeat"
      },
      {
        "value": "youtuberepeater.com",
        "label": "YouTube Repeater"
      }
    ]
  }]
}
